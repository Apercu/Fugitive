{
  "name": "Fugitive",
  "description": "no ads, no bullshit, real privacy.",
  "version": "0.4",
  "manifest_version": 2,
  "icons": {
    "16": "img/16.png",
    "24": "img/24.png",
    "48": "img/48.png",
    "64": "img/64.png",
    "128": "img/128.png"
  },
  "background" : {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_title": "Fugitive",
    "default_icon": "img/48.png"
  },
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "http://fugitive.link/create"
  ]
}
